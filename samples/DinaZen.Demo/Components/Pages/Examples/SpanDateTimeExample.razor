@page "/examples/SpanDateTimeExample"

<PageTitle>SpanDateTime</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="SpanDateTime" Subtitle="Fecha y hora con formato amigable y estado opcional (Hoy, Ayer, Manana)." Icon="schedule" />
</RadzenCard>

<ExampleCard Title="Basico" Description="Formato amigable de fechas" Code="@(@"<SpanDateTime Value=""@DateTime.Now.AddDays(-7)"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(-1)"" />
<SpanDateTime Value=""@DateTime.Now"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(1)"" />")">
    <ChildContent>
        <div class="examples-horizontal">
            <div class="example-item"><span class="example-label">Hace una semana:</span> <SpanDateTime Value="@DateTime.Now.AddDays(-7)" /></div>
            <div class="example-item"><span class="example-label">Ayer:</span> <SpanDateTime Value="@DateTime.Now.AddDays(-1)" /></div>
            <div class="example-item"><span class="example-label">Ahora:</span> <SpanDateTime Value="@DateTime.Now" /></div>
            <div class="example-item"><span class="example-label">Manana:</span> <SpanDateTime Value="@DateTime.Now.AddDays(1)" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="ShowStatus" Description="Badge con estado (Pasado, Ayer, Hoy, Manana, Futuro)" Code="@(@"<SpanDateTime Value=""@DateTime.Now.AddDays(-10)"" ShowStatus=""true"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(-1)"" ShowStatus=""true"" />
<SpanDateTime Value=""@DateTime.Now"" ShowStatus=""true"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(1)"" ShowStatus=""true"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(10)"" ShowStatus=""true"" />")">
    <ChildContent>
        <div class="examples-horizontal">
            <div class="example-item"><span class="example-label">Pasado:</span> <SpanDateTime Value="@DateTime.Now.AddDays(-10)" ShowStatus="true" /></div>
            <div class="example-item"><span class="example-label">Ayer:</span> <SpanDateTime Value="@DateTime.Now.AddDays(-1)" ShowStatus="true" /></div>
            <div class="example-item"><span class="example-label">Hoy:</span> <SpanDateTime Value="@DateTime.Now" ShowStatus="true" /></div>
            <div class="example-item"><span class="example-label">Manana:</span> <SpanDateTime Value="@DateTime.Now.AddDays(1)" ShowStatus="true" /></div>
            <div class="example-item"><span class="example-label">Futuro:</span> <SpanDateTime Value="@DateTime.Now.AddDays(10)" ShowStatus="true" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Caption" Description="Estilo caption (mas pequeno)" Code="@(@"<SpanDateTime Value=""@DateTime.Now"" Caption=""true"" />")">
    <ChildContent>
        <div class="examples-horizontal">
            <div class="example-item"><span class="example-label">Normal:</span> <SpanDateTime Value="@DateTime.Now" /></div>
            <div class="example-item"><span class="example-label">Caption:</span> <SpanDateTime Value="@DateTime.Now" Caption="true" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parametros" Icon="tune" />
    <table class="params-table">
        <tr><th>Parametro</th><th>Tipo</th><th>Default</th><th>Descripcion</th></tr>
        <tr><td><code>Value</code></td><td>DateTime?</td><td>null</td><td>Fecha/hora a mostrar</td></tr>
        <tr><td><code>ShowStatus</code></td><td>bool</td><td>false</td><td>Muestra badge de estado</td></tr>
        <tr><td><code>Caption</code></td><td>bool</td><td>false</td><td>Estilo caption (pequeno)</td></tr>
        <tr><td><code>FontSize</code></td><td>string</td><td>"16px"</td><td>Tamano de fuente</td></tr>
    </table>

    <CardTitle Title="Estados del Badge" Icon="sell" Subtitle="Colores segun la fecha" />
    <table class="params-table">
        <tr><th>Estado</th><th>Color</th><th>Condicion</th></tr>
        <tr><td>Pasado</td><td>Gris</td><td>Fecha &lt; hoy</td></tr>
        <tr><td>Ayer</td><td>Negro</td><td>Fecha = hoy - 1</td></tr>
        <tr><td>Hoy</td><td>Verde</td><td>Fecha = hoy</td></tr>
        <tr><td>Manana</td><td>Azul</td><td>Fecha = hoy + 1</td></tr>
        <tr><td>Futuro</td><td>Morado</td><td>Fecha &gt; hoy</td></tr>
    </table>
</RadzenCard>

<style>
    .examples-horizontal { display: flex; flex-wrap: wrap; gap: 1.5rem; align-items: center; }
    .example-item { display: flex; align-items: center; gap: 0.5rem; }
</style>
