@page "/examples/SpanDateTimeExample"

<PageTitle>SpanDateTime</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="SpanDateTime" Subtitle="Date and time with friendly format and optional status (Today, Yesterday, Tomorrow)." Icon="schedule" />
</RadzenCard>

<ExampleCard Title="Basic" Description="Friendly date format" Code="@(@"<SpanDateTime Value=""@DateTime.Now.AddDays(-7)"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(-1)"" />
<SpanDateTime Value=""@DateTime.Now"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(1)"" />")">
    <ChildContent>
        <div class="examples-horizontal">
            <div class="example-item"><span class="example-label">A week ago:</span> <SpanDateTime Value="@DateTime.Now.AddDays(-7)" /></div>
            <div class="example-item"><span class="example-label">Yesterday:</span> <SpanDateTime Value="@DateTime.Now.AddDays(-1)" /></div>
            <div class="example-item"><span class="example-label">Now:</span> <SpanDateTime Value="@DateTime.Now" /></div>
            <div class="example-item"><span class="example-label">Tomorrow:</span> <SpanDateTime Value="@DateTime.Now.AddDays(1)" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="ShowStatus" Description="Badge with status (Past, Yesterday, Today, Tomorrow, Future)" Code="@(@"<SpanDateTime Value=""@DateTime.Now.AddDays(-10)"" ShowStatus=""true"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(-1)"" ShowStatus=""true"" />
<SpanDateTime Value=""@DateTime.Now"" ShowStatus=""true"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(1)"" ShowStatus=""true"" />
<SpanDateTime Value=""@DateTime.Now.AddDays(10)"" ShowStatus=""true"" />")">
    <ChildContent>
        <div class="examples-horizontal">
            <div class="example-item"><span class="example-label">Past:</span> <SpanDateTime Value="@DateTime.Now.AddDays(-10)" ShowStatus="true" /></div>
            <div class="example-item"><span class="example-label">Yesterday:</span> <SpanDateTime Value="@DateTime.Now.AddDays(-1)" ShowStatus="true" /></div>
            <div class="example-item"><span class="example-label">Today:</span> <SpanDateTime Value="@DateTime.Now" ShowStatus="true" /></div>
            <div class="example-item"><span class="example-label">Tomorrow:</span> <SpanDateTime Value="@DateTime.Now.AddDays(1)" ShowStatus="true" /></div>
            <div class="example-item"><span class="example-label">Future:</span> <SpanDateTime Value="@DateTime.Now.AddDays(10)" ShowStatus="true" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Caption" Description="Caption style (smaller)" Code="@(@"<SpanDateTime Value=""@DateTime.Now"" Caption=""true"" />")">
    <ChildContent>
        <div class="examples-horizontal">
            <div class="example-item"><span class="example-label">Normal:</span> <SpanDateTime Value="@DateTime.Now" /></div>
            <div class="example-item"><span class="example-label">Caption:</span> <SpanDateTime Value="@DateTime.Now" Caption="true" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>Value</code></td><td>DateTime?</td><td>null</td><td>Date/time to display</td></tr>
        <tr><td><code>ShowStatus</code></td><td>bool</td><td>false</td><td>Show status badge</td></tr>
        <tr><td><code>Caption</code></td><td>bool</td><td>false</td><td>Caption style (small)</td></tr>
        <tr><td><code>FontSize</code></td><td>string</td><td>"16px"</td><td>Font size</td></tr>
    </table>

    <CardTitle Title="Badge States" Icon="sell" Subtitle="Colors based on date" />
    <table class="params-table">
        <tr><th>State</th><th>Color</th><th>Condition</th></tr>
        <tr><td>Past</td><td>Gray</td><td>Date &lt; today</td></tr>
        <tr><td>Yesterday</td><td>Black</td><td>Date = today - 1</td></tr>
        <tr><td>Today</td><td>Green</td><td>Date = today</td></tr>
        <tr><td>Tomorrow</td><td>Blue</td><td>Date = today + 1</td></tr>
        <tr><td>Future</td><td>Purple</td><td>Date &gt; today</td></tr>
    </table>
</RadzenCard>

<style>
    .examples-horizontal { display: flex; flex-wrap: wrap; gap: 1.5rem; align-items: center; }
    .example-item { display: flex; align-items: center; gap: 0.5rem; }
</style>
