@page "/examples/StatsDisplayExample"

<PageTitle>StatsDisplay</PageTitle>

<h1 class="rz-mb-2">StatsDisplay</h1>
<p class="rz-text-secondary-color rz-mb-4">Responsive container to display multiple statistics.</p>

<ExampleCard Title="Default" Description="Default style" Code="@(@"@code {
    List<StatsDisplay.StatisticModel> stats = new()
    {
        new() { Value = ""1,234"", Label = ""Usuarios"", Unit = """" },
        new() { Value = ""567"", Label = ""Pedidos"", Unit = ""hoy"" },
        new() { Value = ""89.5"", Label = ""Satisfaccion"", Unit = ""%"" }
    };
}

<StatsDisplay Statistics=""@stats"" />")">
    <ChildContent>
        <StatsDisplay Statistics="@stats1" />
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Outlined" Description="With border" Code="@(@"<StatsDisplay Statistics=""@stats"" Variant=""Variant.Outlined"" />")">
    <ChildContent>
        <StatsDisplay Statistics="@stats2" Variant="Variant.Outlined" />
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="StatsDisplay Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Description</th></tr>
        <tr><td><code>Statistics</code></td><td>List&lt;StatisticModel&gt;</td><td>List of statistics</td></tr>
        <tr><td><code>Variant</code></td><td>Variant</td><td>Container style</td></tr>
    </table>

    <CardTitle Title="StatisticModel" Icon="data_object" Subtitle="Data model" />
    <table class="params-table">
        <tr><th>Property</th><th>Type</th><th>Description</th></tr>
        <tr><td><code>Value</code></td><td>string</td><td>Statistic value</td></tr>
        <tr><td><code>Label</code></td><td>string</td><td>Descriptive label</td></tr>
        <tr><td><code>Unit</code></td><td>string</td><td>Unit of measurement</td></tr>
    </table>
</RadzenCard>

@code {
    List<StatsDisplay.StatisticModel> stats1 = new()
    {
        new() { Value = "1,234", Label = "Usuarios Activos", Unit = "" },
        new() { Value = "567", Label = "Pedidos", Unit = "hoy" },
        new() { Value = "89.5", Label = "Satisfaccion", Unit = "%" },
        new() { Value = "45", Label = "Tiempo Respuesta", Unit = "min" }
    };

    List<StatsDisplay.StatisticModel> stats2 = new()
    {
        new() { Value = "$45,678", Label = "Ingresos Mes", Unit = "" },
        new() { Value = "+12%", Label = "vs Mes Anterior", Unit = "" },
        new() { Value = "892", Label = "Transacciones", Unit = "" }
    };
}
