@page "/examples/SpanMoneyExample"

<PageTitle>SpanMoney</PageTitle>

<h1 class="rz-mb-2">SpanMoney</h1>
<p class="rz-text-secondary-color rz-mb-4">Formatted monetary values with optional label and icon.</p>

<ExampleCard Title="Basic Usage" Description="Shows positive, negative and zero values" Code="@(@"<SpanMoney Amount=""1500.50m"" />
<SpanMoney Amount=""-200m"" />
<SpanMoney Amount=""0m"" />")">
    <ChildContent>
        <div class="examples-row">
            <div><span class="label">Positive:</span> <SpanMoney Amount="1500.50m" /></div>
            <div><span class="label">Negative:</span> <SpanMoney Amount="-200m" /></div>
            <div><span class="label">Zero:</span> <SpanMoney Amount="0m" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="With Label" Description="Adds a descriptive label on top" Code="@(@"<SpanMoney Amount=""2999.99m"" Label=""Total"" />
<SpanMoney Amount=""150m"" Label=""Subtotal"" />
<SpanMoney Amount=""500m"" Label=""Discount"" />")">
    <ChildContent>
        <div class="examples-row">
            <SpanMoney Amount="2999.99m" Label="Total" />
            <SpanMoney Amount="150m" Label="Subtotal" />
            <SpanMoney Amount="500m" Label="Discount" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="With Icon" Description="Includes a Material Design icon" Code="@(@"<SpanMoney Amount=""2999.99m"" Label=""Total"" Icon=""payments"" />
<SpanMoney Amount=""500m"" Label=""Income"" Icon=""trending_up"" />
<SpanMoney Amount=""-150m"" Label=""Expense"" Icon=""trending_down"" />")">
    <ChildContent>
        <div class="examples-row">
            <SpanMoney Amount="2999.99m" Label="Total" Icon="payments" />
            <SpanMoney Amount="500m" Label="Income" Icon="trending_up" />
            <SpanMoney Amount="-150m" Label="Expense" Icon="trending_down" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="AutoColor" Description="Automatic color based on value sign" Code="@(@"<SpanMoney Amount=""500m"" AutoColor=""true"" />
<SpanMoney Amount=""-200m"" AutoColor=""true"" />
<SpanMoney Amount=""300m"" AutoColorGreen=""true"" />
<SpanMoney Amount=""-100m"" AutoColorRed=""true"" />")">
    <ChildContent>
        <div class="examples-row">
            <div><span class="label">AutoColor positive:</span> <SpanMoney Amount="500m" AutoColor="true" /></div>
            <div><span class="label">AutoColor negative:</span> <SpanMoney Amount="-200m" AutoColor="true" /></div>
            <div><span class="label">AutoColorGreen:</span> <SpanMoney Amount="300m" AutoColorGreen="true" /></div>
            <div><span class="label">AutoColorRed:</span> <SpanMoney Amount="-100m" AutoColorRed="true" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <h5>Parameters</h5>
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>Amount</code></td><td>decimal?</td><td>0</td><td>Monetary value</td></tr>
        <tr><td><code>Label</code></td><td>string</td><td>""</td><td>Top label</td></tr>
        <tr><td><code>Icon</code></td><td>string</td><td>""</td><td>Material Design icon</td></tr>
        <tr><td><code>AutoColor</code></td><td>bool</td><td>false</td><td>Green positive, red negative</td></tr>
        <tr><td><code>AutoColorGreen</code></td><td>bool</td><td>false</td><td>Only green if positive</td></tr>
        <tr><td><code>AutoColorRed</code></td><td>bool</td><td>false</td><td>Only red if negative</td></tr>
        <tr><td><code>IsVisible</code></td><td>bool</td><td>true</td><td>Show/hide</td></tr>
        <tr><td><code>CssClass</code></td><td>string</td><td>""</td><td>Additional CSS classes</td></tr>
        <tr><td><code>FontSize</code></td><td>string</td><td>"16px"</td><td>Font size</td></tr>
    </table>
</RadzenCard>

