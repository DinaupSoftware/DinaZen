@page "/examples/SpanMoneyExample"

<PageTitle>SpanMoney</PageTitle>

<h1 class="rz-mb-2">SpanMoney</h1>
<p class="rz-text-secondary-color rz-mb-4">Valores monetarios con formato, label opcional e icono.</p>

<ExampleCard Title="Uso basico" Description="Muestra valores positivos, negativos y cero" Code="@(@"<SpanMoney Amount=""1500.50m"" />
<SpanMoney Amount=""-200m"" />
<SpanMoney Amount=""0m"" />")">
    <ChildContent>
        <div class="examples-row">
            <div><span class="label">Positivo:</span> <SpanMoney Amount="1500.50m" /></div>
            <div><span class="label">Negativo:</span> <SpanMoney Amount="-200m" /></div>
            <div><span class="label">Cero:</span> <SpanMoney Amount="0m" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Con Label" Description="Agrega una etiqueta descriptiva superior" Code="@(@"<SpanMoney Amount=""2999.99m"" Label=""Total"" />
<SpanMoney Amount=""150m"" Label=""Subtotal"" />
<SpanMoney Amount=""500m"" Label=""Descuento"" />")">
    <ChildContent>
        <div class="examples-row">
            <SpanMoney Amount="2999.99m" Label="Total" />
            <SpanMoney Amount="150m" Label="Subtotal" />
            <SpanMoney Amount="500m" Label="Descuento" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Con Icono" Description="Incluye un icono Material Design" Code="@(@"<SpanMoney Amount=""2999.99m"" Label=""Total"" Icon=""payments"" />
<SpanMoney Amount=""500m"" Label=""Ingreso"" Icon=""trending_up"" />
<SpanMoney Amount=""-150m"" Label=""Gasto"" Icon=""trending_down"" />")">
    <ChildContent>
        <div class="examples-row">
            <SpanMoney Amount="2999.99m" Label="Total" Icon="payments" />
            <SpanMoney Amount="500m" Label="Ingreso" Icon="trending_up" />
            <SpanMoney Amount="-150m" Label="Gasto" Icon="trending_down" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="AutoColor" Description="Color automatico segun el signo del valor" Code="@(@"<SpanMoney Amount=""500m"" AutoColor=""true"" />
<SpanMoney Amount=""-200m"" AutoColor=""true"" />
<SpanMoney Amount=""300m"" AutoColorGreen=""true"" />
<SpanMoney Amount=""-100m"" AutoColorRed=""true"" />")">
    <ChildContent>
        <div class="examples-row">
            <div><span class="label">AutoColor positivo:</span> <SpanMoney Amount="500m" AutoColor="true" /></div>
            <div><span class="label">AutoColor negativo:</span> <SpanMoney Amount="-200m" AutoColor="true" /></div>
            <div><span class="label">AutoColorGreen:</span> <SpanMoney Amount="300m" AutoColorGreen="true" /></div>
            <div><span class="label">AutoColorRed:</span> <SpanMoney Amount="-100m" AutoColorRed="true" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <h5>Parametros</h5>
    <table class="params-table">
        <tr><th>Parametro</th><th>Tipo</th><th>Default</th><th>Descripcion</th></tr>
        <tr><td><code>Amount</code></td><td>decimal?</td><td>0</td><td>Valor monetario</td></tr>
        <tr><td><code>Label</code></td><td>string</td><td>""</td><td>Etiqueta superior</td></tr>
        <tr><td><code>Icon</code></td><td>string</td><td>""</td><td>Icono Material Design</td></tr>
        <tr><td><code>AutoColor</code></td><td>bool</td><td>false</td><td>Verde positivo, rojo negativo</td></tr>
        <tr><td><code>AutoColorGreen</code></td><td>bool</td><td>false</td><td>Solo verde si positivo</td></tr>
        <tr><td><code>AutoColorRed</code></td><td>bool</td><td>false</td><td>Solo rojo si negativo</td></tr>
        <tr><td><code>IsVisible</code></td><td>bool</td><td>true</td><td>Mostrar/ocultar</td></tr>
        <tr><td><code>CssClass</code></td><td>string</td><td>""</td><td>Clases CSS adicionales</td></tr>
        <tr><td><code>FontSize</code></td><td>string</td><td>"16px"</td><td>Tamano de fuente</td></tr>
    </table>
</RadzenCard>

