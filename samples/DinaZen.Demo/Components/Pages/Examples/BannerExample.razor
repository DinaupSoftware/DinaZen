    string basicUsage = "<Banner Style=\"Banner.BannerStyle.Love\"\n        Icon=\"favorite\"\n        Title=\"San Valentin: -30%\"\n        ButtonText=\"Canjear\"\n        ButtonUrl=\"https://dinaup.com/promo\">\n    <p>Codigo <strong>LOVE2025</strong> valido hasta el 14 de febrero.</p>\n</Banner>";

