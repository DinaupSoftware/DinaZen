@page "/examples/BannerExample"

<PageTitle>Banner</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="Banner" Subtitle="Eye-catching banners with 11 styles for different contexts." Icon="campaign" />
</RadzenCard>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="Main Styles" Icon="palette" />

    <h4 class="rz-mt-4 rz-mb-2">Primary</h4>
    <Banner Style="Banner.BannerStyle.Primary"
            Icon="update"
            Title="Dinaup 4.2 is here"
            ButtonText="See what's new"
            ButtonUrl="#">
        <p>Redesigned dashboard, <strong>50% faster</strong>. Already active on your account.</p>
    </Banner>

    <h4 class="rz-mt-4 rz-mb-2">Gold</h4>
    <Banner Style="Banner.BannerStyle.Gold"
            Icon="workspace_premium"
            Title="Unlock Dinaup Business"
            ButtonText="Upgrade"
            ButtonUrl="#">
        <p>Multi-company, unlimited users and <strong>24/7</strong> priority support.</p>
    </Banner>

    <h4 class="rz-mt-4 rz-mb-2">Love</h4>
    <Banner Style="Banner.BannerStyle.Love"
            Icon="favorite"
            Title="Valentine's Day: 30% off all plans"
            ButtonText="Redeem"
            ButtonUrl="#">
        <p>Code <strong>LOVE2025</strong> valid until February 14.</p>
    </Banner>

    <h4 class="rz-mt-4 rz-mb-2">Danger</h4>
    <Banner Style="Banner.BannerStyle.Danger"
            Icon="error"
            Title="Your subscription expires in 3 days"
            ButtonText="Renew"
            ButtonUrl="#">
        <p>Renew now to keep access to your data.</p>
    </Banner>

    <h4 class="rz-mt-4 rz-mb-2">Success</h4>
    <Banner Style="Banner.BannerStyle.Success"
            Icon="check_circle"
            Title="Setup complete!"
            ButtonText="Get started"
            ButtonUrl="#">
        <p>Your account is ready. Start creating your first invoice.</p>
    </Banner>

    <h4 class="rz-mt-4 rz-mb-2">Warning</h4>
    <Banner Style="Banner.BannerStyle.Warning"
            Icon="warning"
            Title="Scheduled maintenance tonight"
            ButtonText="More info"
            ButtonUrl="#">
        <p>Service will be unavailable from <strong>02:00 to 04:00</strong>.</p>
    </Banner>
</RadzenCard>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="Badge Styles" Icon="sell" />

    <h4 class="rz-mt-4 rz-mb-2">Pro</h4>
    <Banner Style="Banner.BannerStyle.Pro"
            Icon="bolt"
            Title="Unlock advanced reports"
            ButtonText="Activate PRO"
            ButtonUrl="#">
        <p>Predictive analysis, bulk export and dashboards. <strong>PRO only.</strong></p>
    </Banner>

    <h4 class="rz-mt-4 rz-mb-2">Beta</h4>
    <Banner Style="Banner.BannerStyle.Beta"
            Icon="science"
            Title="Try the new invoice editor"
            ButtonText="Try beta"
            ButtonUrl="#">
        <p>Beta version available. <strong>Your feedback is key.</strong></p>
    </Banner>

    <h4 class="rz-mt-4 rz-mb-2">New</h4>
    <Banner Style="Banner.BannerStyle.New"
            Icon="auto_awesome"
            Title="New: Inventory module"
            ButtonText="Explore"
            ButtonUrl="#">
        <p>Real-time stock control and POS synchronization.</p>
    </Banner>

    <h4 class="rz-mt-4 rz-mb-2">Premium</h4>
    <Banner Style="Banner.BannerStyle.Premium"
            Icon="diamond"
            Title="Flash Sale: 50% off Annual Plan"
            ButtonText="Buy now"
            ButtonUrl="#">
        <p>Only 24 hours. <strong>This price won't come back.</strong></p>
    </Banner>

    <h4 class="rz-mt-4 rz-mb-2">IA</h4>
    <Banner Style="Banner.BannerStyle.IA"
            Icon="psychology"
            Title="AI Copilot now available"
            ButtonText="Activate AI"
            ButtonUrl="#">
        <p>Your accounting assistant. Ask it about your finances.</p>
    </Banner>
</RadzenCard>

<ExampleCard Title="Basic Usage" Description="Banner with all parameters" Language="razor" Code="@basicUsage">
    <ChildContent>
        <Banner Style="Banner.BannerStyle.Love"
                Icon="favorite"
                Title="Valentine's Day: 30% off"
                ButtonText="Redeem"
                ButtonUrl="#">
            <p>Code <strong>LOVE2025</strong> valid until February 14.</p>
        </Banner>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="No Button" Description="Information-only banner" Language="razor" Code="@noBtnUsage">
    <ChildContent>
        <Banner Style="Banner.BannerStyle.Primary"
                Icon="info"
                Title="Informative banner">
            <p>This banner has no button, ideal for <strong>informational messages</strong>.</p>
        </Banner>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>Style</code></td><td>BannerStyle</td><td>Primary</td><td>Banner visual style</td></tr>
        <tr><td><code>Icon</code></td><td>string?</td><td>null</td><td>Material Symbols icon</td></tr>
        <tr><td><code>Title</code></td><td>string?</td><td>null</td><td>Banner title</td></tr>
        <tr><td><code>ChildContent</code></td><td>RenderFragment?</td><td>null</td><td>Banner HTML content</td></tr>
        <tr><td><code>ButtonText</code></td><td>string?</td><td>null</td><td>Button text</td></tr>
        <tr><td><code>ButtonUrl</code></td><td>string?</td><td>null</td><td>Button URL</td></tr>
        <tr><td><code>OpenInNewTab</code></td><td>bool</td><td>true</td><td>Open link in new tab</td></tr>
        <tr><td><code>AdditionalClass</code></td><td>string?</td><td>null</td><td>Additional CSS classes</td></tr>
    </table>

    <CardTitle Title="BannerStyle Enum" Icon="list" Subtitle="Available styles" />
    <table class="params-table">
        <tr><th>Value</th><th>Description</th></tr>
        <tr><td><code>Primary</code></td><td>Dinaup Blue - Updates, releases, highlights</td></tr>
        <tr><td><code>Gold</code></td><td>Golden with shimmer - Premium, upgrade</td></tr>
        <tr><td><code>Love</code></td><td>Pink heart - Love, Valentine's Day, weddings</td></tr>
        <tr><td><code>Danger</code></td><td>Urgent red - Critical, last hours</td></tr>
        <tr><td><code>Success</code></td><td>Success green - Completed, verified</td></tr>
        <tr><td><code>Warning</code></td><td>Orange warning - Serious alerts, maintenance</td></tr>
        <tr><td><code>Pro</code></td><td>Purple/Blue - PRO features</td></tr>
        <tr><td><code>Beta</code></td><td>Red/Orange - Experimental, beta</td></tr>
        <tr><td><code>New</code></td><td>Cyan/Blue - News, releases</td></tr>
        <tr><td><code>Premium</code></td><td>Elegant gold - Premium offers</td></tr>
        <tr><td><code>IA</code></td><td>Green/Cyan - Artificial Intelligence</td></tr>
    </table>
</RadzenCard>

@code {
    string basicUsage = "<Banner Style=\"Banner.BannerStyle.Love\"\n        Icon=\"favorite\"\n        Title=\"Valentine's Day: 30% off\"\n        ButtonText=\"Redeem\"\n        ButtonUrl=\"https://dinaup.com/promo\">\n    <p>Code <strong>LOVE2025</strong> valid until February 14.</p>\n</Banner>";

    string noBtnUsage = "<Banner Style=\"Banner.BannerStyle.Primary\"\n        Icon=\"info\"\n        Title=\"Informative banner\">\n    <p>This banner has no button.</p>\n</Banner>";
}
