@page "/examples/FileNameExample"

<PageTitle>FileName</PageTitle>

<h1 class="rz-mb-2">FileName</h1>
<p class="rz-text-secondary-color rz-mb-4">Display file with icon based on extension, formatted size and download link.</p>

<ExampleCard Title="Basic" Description="Display files with icon and size" Code="@(@"<FileName FileNameDisplay=""documento.pdf"" />
<FileName FileNameDisplay=""imagen.jpg"" FileSize=""524288"" />")">
    <ChildContent>
        <div class="examples-grid">
            <FileName FileNameDisplay="documento.pdf" />
            <FileName FileNameDisplay="imagen.jpg" FileSize="524288" />
            <FileName FileNameDisplay="datos.xlsx" FileSize="2097152" />
            <FileName FileNameDisplay="texto.txt" FileSize="1024" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="With Download" Description="Download link" Code="@(@"<FileName FileNameDisplay=""documento.pdf""
          FileSize=""1048576""
          DownloadURL=""https://example.com/doc.pdf"" />")">
    <ChildContent>
        <div class="examples-grid">
            <FileName FileNameDisplay="informe.pdf" FileSize="1048576" DownloadURL="#" />
            <FileName FileNameDisplay="backup.zip" FileSize="10485760" DownloadURL="#" />
            <FileName FileNameDisplay="plantilla.docx" FileSize="256000" DownloadURL="#" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="With Click" Description="Custom click event" Code="@(@"<FileName FileNameDisplay=""preview.pdf""
          FileSize=""500000""
          OnClick=""@HandleClick""
          OnClick_Icon=""visibility"" />

@code {
    void HandleClick() => Console.WriteLine(""Archivo clickeado"");
}")">
    <ChildContent>
        <div class="examples-grid">
            <FileName FileNameDisplay="preview.pdf" FileSize="500000" OnClick="@HandleClick" OnClick_Icon="visibility" />
            <span class="rz-text-secondary-color">@clickMessage</span>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="File Types" Description="Automatic icons based on extension" Code="@(@"@* Documentos *@
<FileName FileNameDisplay=""documento.pdf"" />
<FileName FileNameDisplay=""informe.docx"" />

@* Imagenes *@
<FileName FileNameDisplay=""foto.jpg"" />
<FileName FileNameDisplay=""logo.png"" />

@* Codigo *@
<FileName FileNameDisplay=""script.js"" />
<FileName FileNameDisplay=""config.json"" />")">
    <ChildContent>
        <h6>Documents</h6>
        <div class="examples-grid rz-mb-3">
            <FileName FileNameDisplay="documento.pdf" FileSize="1000000" />
            <FileName FileNameDisplay="informe.docx" FileSize="500000" />
            <FileName FileNameDisplay="datos.xlsx" FileSize="750000" />
            <FileName FileNameDisplay="presentacion.pptx" FileSize="2000000" />
        </div>

        <h6>Images</h6>
        <div class="examples-grid rz-mb-3">
            <FileName FileNameDisplay="foto.jpg" FileSize="300000" />
            <FileName FileNameDisplay="logo.png" FileSize="50000" />
            <FileName FileNameDisplay="icono.svg" FileSize="5000" />
        </div>

        <h6>Code</h6>
        <div class="examples-grid rz-mb-3">
            <FileName FileNameDisplay="script.js" FileSize="10000" />
            <FileName FileNameDisplay="config.json" FileSize="2000" />
            <FileName FileNameDisplay="query.sql" FileSize="5000" />
            <FileName FileNameDisplay="styles.css" FileSize="8000" />
        </div>

        <h6>Others</h6>
        <div class="examples-grid">
            <FileName FileNameDisplay="backup.zip" FileSize="50000000" />
            <FileName FileNameDisplay="cancion.mp3" FileSize="5000000" />
            <FileName FileNameDisplay="video.mp4" FileSize="100000000" />
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>FileNameDisplay</code></td><td>string</td><td>null</td><td>File name (determines icon)</td></tr>
        <tr><td><code>FileSize</code></td><td>long?</td><td>null</td><td>Size in bytes (auto-formats to KB/MB/GB)</td></tr>
        <tr><td><code>DownloadURL</code></td><td>string</td><td>null</td><td>Download URL (shows button)</td></tr>
        <tr><td><code>OnClick</code></td><td>EventCallback</td><td>-</td><td>Click event (alternative to DownloadURL)</td></tr>
        <tr><td><code>OnClick_Icon</code></td><td>string</td><td>"arrow_right"</td><td>OnClick button icon</td></tr>
    </table>

    <CardTitle Title="Supported Extensions" Icon="folder_open" Subtitle="Automatic icons by type" />
    <HighlightCode Language="text" Code="@extensionesCode" />
</RadzenCard>

@code {
    private string clickMessage = "";

    private string extensionesCode = @"Documents: .pdf, .doc, .docx, .xls, .xlsx, .ppt, .pptx, .txt
Images: .jpg, .jpeg, .png, .gif, .bmp, .svg, .webp
Code: .css, .js, .json, .php, .html, .sql
Audio: .mp3, .wav
Video: .mp4, .avi
Others: .zip, .iso, .psd, .ttf";

    private void HandleClick()
    {
        clickMessage = "Archivo clickeado!";
        StateHasChanged();
    }
}

<style>
    .examples-grid { display: flex; flex-wrap: wrap; gap: 0.5rem; }
</style>
