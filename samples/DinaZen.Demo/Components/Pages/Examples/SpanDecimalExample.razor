@page "/examples/SpanDecimalExample"

<PageTitle>SpanDecimal</PageTitle>

<h1 class="rz-mb-2">SpanDecimal</h1>
<p class="rz-text-secondary-color rz-mb-4">Formatted decimal numbers with optional auto-color.</p>

<ExampleCard Title="Basic Usage" Description="Different decimal values" Code="@(@"<SpanDecimal Value=""1234.56m"" />
<SpanDecimal Value=""-500.00m"" />
<SpanDecimal Value=""0m"" />
<SpanDecimal Value=""999999.99m"" />")">
    <ChildContent>
        <div class="examples-row">
            <div><span class="label">Positive:</span> <SpanDecimal Value="1234.56m" /></div>
            <div><span class="label">Negative:</span> <SpanDecimal Value="-500.00m" /></div>
            <div><span class="label">Zero:</span> <SpanDecimal Value="0m" /></div>
            <div><span class="label">Large:</span> <SpanDecimal Value="999999.99m" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="AutoColor" Description="Green for positives, red for negatives" Code="@(@"<SpanDecimal Value=""1234.56m"" AutoColor=""true"" />
<SpanDecimal Value=""-500.00m"" AutoColor=""true"" />
<SpanDecimal Value=""0m"" AutoColor=""true"" />")">
    <ChildContent>
        <div class="examples-row">
            <div><span class="label">Positive (green):</span> <SpanDecimal Value="1234.56m" AutoColor="true" /></div>
            <div><span class="label">Negative (red):</span> <SpanDecimal Value="-500.00m" AutoColor="true" /></div>
            <div><span class="label">Zero:</span> <SpanDecimal Value="0m" AutoColor="true" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="With Symbol" Description="Adds unit or symbol to the value" Code="@(@"<SpanDecimal Value=""50m"" Symbol=""%"" />
<SpanDecimal Value=""100m"" Symbol=""pcs"" />
<SpanDecimal Value=""25.5m"" Symbol=""m"" />")">
    <ChildContent>
        <div class="examples-row">
            <div><span class="label">Percentage:</span> <SpanDecimal Value="50m" Symbol="%" /></div>
            <div><span class="label">Units:</span> <SpanDecimal Value="100m" Symbol="pcs" /></div>
            <div><span class="label">Meters:</span> <SpanDecimal Value="25.5m" Symbol="m" /></div>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>Value</code></td><td>decimal?</td><td>null</td><td>Number to display</td></tr>
        <tr><td><code>AutoColor</code></td><td>bool</td><td>false</td><td>Green positive, red negative</td></tr>
        <tr><td><code>Symbol</code></td><td>string</td><td>""</td><td>Symbol/unit to display</td></tr>
        <tr><td><code>Class</code></td><td>string</td><td>""</td><td>Additional CSS classes</td></tr>
        <tr><td><code>FontSize</code></td><td>string</td><td>"16px"</td><td>Font size</td></tr>
    </table>
</RadzenCard>
