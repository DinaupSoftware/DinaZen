@page "/examples/TimeComparisonDisplayExample"

<PageTitle>TimeComparisonDisplay</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="TimeComparisonDisplay" Subtitle="Compare planned vs actual time with visual bar." Icon="compare_arrows" />
</RadzenCard>

<ExampleCard Title="Comparisons" Description="Different compliance states" Code="@(@"<TimeComparisonDisplay PlannedTime=""60"" ActualTime=""45"" />   @* under budget *@
<TimeComparisonDisplay PlannedTime=""60"" ActualTime=""60"" />   @* exact *@
<TimeComparisonDisplay PlannedTime=""60"" ActualTime=""90"" />   @* exceeded *@")">
    <ChildContent>
        <div class="examples-grid">
            <div>
                <span class="example-label">Under (45/60):</span>
                <TimeComparisonDisplay PlannedTime="60" ActualTime="45" />
            </div>
            <div>
                <span class="example-label">Exact (60/60):</span>
                <TimeComparisonDisplay PlannedTime="60" ActualTime="60" />
            </div>
            <div>
                <span class="example-label">Exceeded (90/60):</span>
                <TimeComparisonDisplay PlannedTime="60" ActualTime="90" />
            </div>
            <div>
                <span class="example-label">Very exceeded (120/60):</span>
                <TimeComparisonDisplay PlannedTime="60" ActualTime="120" />
            </div>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Description</th></tr>
        <tr><td><code>PlannedTime</code></td><td>decimal</td><td>Planned minutes</td></tr>
        <tr><td><code>ActualTime</code></td><td>decimal</td><td>Actual minutes</td></tr>
    </table>
</RadzenCard>
