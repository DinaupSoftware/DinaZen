@page "/examples/SearchInputExample"

<PageTitle>SearchInput</PageTitle>

<h1 class="rz-mb-2">SearchInput</h1>
<p class="rz-text-secondary-color rz-mb-4">Search input with 500ms debounce.</p>

<ExampleCard Title="Interactive Example" Description="Callback fires 500ms after stopping typing" Code="@(@"<SearchInput @bind-Value=""@searchTerm"" />

<SearchInput Value=""@searchTerm""
             ValueChanged=""@OnSearch"" />

@code {
    string searchTerm = """";

    void OnSearch(string value)
    {
        // Executes 500ms after stopping typing
        Console.WriteLine($""Buscando: {value}"");
    }
}")">
    <ChildContent>
        <SearchInput @bind-Value="@searchValue" />
        <p class="rz-mt-2">Value: <strong>@searchValue</strong></p>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>Value</code></td><td>string</td><td>""</td><td>Input value (two-way)</td></tr>
        <tr><td><code>ValueChanged</code></td><td>EventCallback&lt;string&gt;</td><td>-</td><td>Instant callback</td></tr>
        <tr><td><code>BounceValueChanged</code></td><td>EventCallback&lt;string&gt;</td><td>-</td><td>Callback with 500ms debounce</td></tr>
    </table>
</RadzenCard>

