<ExampleCard Title="Con Click" Description="Badge interactivo" Code="@(@"<BadgetAutoColor Value=""Haz click"" Click=""@OnClick"" />

@code {
    void OnClick() => message = ""Clicked!"";
}")">
    <ChildContent>
        <div class="badge-row">
            <BadgetAutoColor Value="Haz click" Click="@OnClick" />
            <span>@clickMessage</span>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parametros" Icon="tune" />
    <table class="params-table">
        <tr><th>Parametro</th><th>Tipo</th><th>Default</th><th>Descripcion</th></tr>
        <tr><td><code>Value</code></td><td>string</td><td>null</td><td>Texto del badge (determina el color)</td></tr>
        <tr><td><code>Color</code></td><td>EnumEstilosTextoEE</td><td>Indefinido</td><td>Fuerza un estilo especifico</td></tr>
        <tr><td><code>Visible</code></td><td>bool</td><td>true</td><td>Muestra/oculta el badge</td></tr>
        <tr><td><code>Style</code></td><td>string</td><td>null</td><td>Estilos CSS inline adicionales</td></tr>
        <tr><td><code>Click</code></td><td>EventCallback</td><td>-</td><td>Evento al hacer click</td></tr>
    </table>
</RadzenCard>

@code {
    private string clickMessage = "";

    private void OnClick()
    {
        clickMessage = "Badge clickeado!";
        StateHasChanged();
    }
}

