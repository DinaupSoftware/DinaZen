@page "/examples/BadgetAutoColorExample"

<PageTitle>BadgetAutoColor</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="BadgetAutoColor" Subtitle="Badge con mapeo automatico de color segun el texto." Icon="label" />
</RadzenCard>

