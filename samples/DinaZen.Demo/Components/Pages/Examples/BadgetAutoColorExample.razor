@page "/examples/BadgetAutoColorExample"

<PageTitle>BadgetAutoColor</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="BadgetAutoColor" Subtitle="Badge with automatic color mapping based on text." Icon="label" />
</RadzenCard>

<ExampleCard Title="Positive States" Description="Texts displayed in green" Code="@(@"<BadgetAutoColor Value=""Active"" />
<BadgetAutoColor Value=""Completed"" />
<BadgetAutoColor Value=""Paid"" />
<BadgetAutoColor Value=""Valid"" />
<BadgetAutoColor Value=""Operational"" />
<BadgetAutoColor Value=""Reconciled"" />")">
    <ChildContent>
        <div class="badge-row">
            <BadgetAutoColor Value="Active" />
            <BadgetAutoColor Value="Completed" />
            <BadgetAutoColor Value="Paid" />
            <BadgetAutoColor Value="Valid" />
            <BadgetAutoColor Value="Operational" />
            <BadgetAutoColor Value="Reconciled" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Pending States" Description="Texts displayed in yellow" Code="@(@"<BadgetAutoColor Value=""Pending"" />
<BadgetAutoColor Value=""Open"" />
<BadgetAutoColor Value=""In progress"" />
<BadgetAutoColor Value=""Incomplete"" />
<BadgetAutoColor Value=""Awaiting payment"" />")">
    <ChildContent>
        <div class="badge-row">
            <BadgetAutoColor Value="Pending" />
            <BadgetAutoColor Value="Open" />
            <BadgetAutoColor Value="In progress" />
            <BadgetAutoColor Value="Incomplete" />
            <BadgetAutoColor Value="Awaiting payment" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Negative States" Description="Texts displayed in red" Code="@(@"<BadgetAutoColor Value=""Cancelled"" />
<BadgetAutoColor Value=""Expired"" />
<BadgetAutoColor Value=""Disabled"" />
<BadgetAutoColor Value=""Negative"" />
<BadgetAutoColor Value=""Excess"" />")">
    <ChildContent>
        <div class="badge-row">
            <BadgetAutoColor Value="Cancelled" />
            <BadgetAutoColor Value="Expired" />
            <BadgetAutoColor Value="Disabled" />
            <BadgetAutoColor Value="Negative" />
            <BadgetAutoColor Value="Excess" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Dates and Operations" Description="Other automatic mappings" Code="@(@"<BadgetAutoColor Value=""Today"" />
<BadgetAutoColor Value=""Yesterday"" />
<BadgetAutoColor Value=""Tomorrow"" />
<BadgetAutoColor Value=""Past"" />
<BadgetAutoColor Value=""Future"" />
<BadgetAutoColor Value=""Sale"" />
<BadgetAutoColor Value=""Purchase"" />
<BadgetAutoColor Value=""Monthly"" />
<BadgetAutoColor Value=""Annual"" />")">
    <ChildContent>
        <div class="badge-row rz-mb-3">
            <BadgetAutoColor Value="Today" />
            <BadgetAutoColor Value="Yesterday" />
            <BadgetAutoColor Value="Tomorrow" />
            <BadgetAutoColor Value="Past" />
            <BadgetAutoColor Value="Future" />
        </div>
        <div class="badge-row">
            <BadgetAutoColor Value="Sale" />
            <BadgetAutoColor Value="Purchase" />
            <BadgetAutoColor Value="Monthly" />
            <BadgetAutoColor Value="Annual" />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="With Click" Description="Interactive badge" Code="@(@"<BadgetAutoColor Value=""Click me"" Click=""@OnClick"" />

@code {
    void OnClick() => message = ""Clicked!"";
}")">
    <ChildContent>
        <div class="badge-row">
            <BadgetAutoColor Value="Click me" Click="@OnClick" />
            <span>@clickMessage</span>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>Value</code></td><td>string</td><td>null</td><td>Badge text (determines color)</td></tr>
        <tr><td><code>Color</code></td><td>EnumEstilosTextoEE</td><td>Undefined</td><td>Force a specific style</td></tr>
        <tr><td><code>Visible</code></td><td>bool</td><td>true</td><td>Show/hide badge</td></tr>
        <tr><td><code>Style</code></td><td>string</td><td>null</td><td>Additional inline CSS styles</td></tr>
        <tr><td><code>Click</code></td><td>EventCallback</td><td>-</td><td>Click event</td></tr>
    </table>
</RadzenCard>

@code {
    private string clickMessage = "";

    private void OnClick()
    {
        clickMessage = "Badge clicked!";
        StateHasChanged();
    }
}
