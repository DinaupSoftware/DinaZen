@page "/examples/FooterPoweredByExample"

<PageTitle>FooterPoweredBy</PageTitle>

<h1 class="rz-mb-2">FooterPoweredBy</h1>
<p class="rz-text-secondary-color rz-mb-4">Footer 'Powered by Dinaup' in Compact or Modern styles.</p>

<ExampleCard Title="Compact" Description="Minimalist version, single line" Code="@(@"<FooterPoweredBy Style=""FooterPoweredBy.FooterStyleType.Compact"" />")">
    <ChildContent>
        <RadzenCard Variant="Variant.Outlined">
            <FooterPoweredBy Style="FooterPoweredBy.FooterStyleType.Compact" />
        </RadzenCard>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Modern (default)" Description="Version with more space and styling" Code="@(@"<FooterPoweredBy Style=""FooterPoweredBy.FooterStyleType.Modern"" />
<FooterPoweredBy />")">
    <ChildContent>
        <RadzenCard Variant="Variant.Outlined">
            <FooterPoweredBy Style="FooterPoweredBy.FooterStyleType.Modern" />
        </RadzenCard>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>Style</code></td><td>FooterStyleType</td><td>Modern</td><td>Footer style</td></tr>
    </table>

    <CardTitle Title="FooterStyleType Enum" Icon="list" Subtitle="Available styles" />
    <table class="params-table">
        <tr><th>Value</th><th>Description</th></tr>
        <tr><td><code>Compact</code></td><td>Minimalist version, single line</td></tr>
        <tr><td><code>Modern</code></td><td>Version with more space and styling</td></tr>
    </table>
</RadzenCard>
