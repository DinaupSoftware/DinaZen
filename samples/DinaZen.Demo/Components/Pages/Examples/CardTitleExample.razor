@page "/examples/CardTitleExample"

<PageTitle>CardTitle</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="CardTitle" Subtitle="Encabezado de seccion con icono, badge Beta y ayuda colapsable." Icon="title" />
</RadzenCard>

<ExampleCard Title="Basico" Description="Titulo con icono" Code="@(@"<CardTitle Title=""Configuracion General"" Icon=""settings"" />")">
    <ChildContent>
        <RadzenCard Variant="Variant.Outlined">
            <CardTitle Title="Configuracion General" Icon="settings" />
            <p>Contenido de la seccion...</p>
        </RadzenCard>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Con Badge Beta" Description="Marca secciones en desarrollo" Code="@(@"<CardTitle Title=""Integraciones"" Icon=""extension"" Beta=""true"" />")">
    <ChildContent>
        <RadzenCard Variant="Variant.Outlined">
            <CardTitle Title="Integraciones" Icon="extension" Beta="true" />
            <p>Seccion marcada como Beta.</p>
        </RadzenCard>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Con Ayuda Colapsable" Description="Muestra contenido de ayuda expandible" Code="@(@"<CardTitle Title=""Usuarios y Permisos"" Icon=""people"">
    <HelpContent>
        <p>Esta seccion permite gestionar usuarios, roles y permisos de acceso.</p>
    </HelpContent>
</CardTitle>")">
    <ChildContent>
        <RadzenCard Variant="Variant.Outlined">
            <CardTitle Title="Usuarios y Permisos" Icon="people">
                <HelpContent>
                    <p>Esta seccion permite gestionar usuarios, roles y permisos de acceso.</p>
                </HelpContent>
            </CardTitle>
            <p>Haz clic en el icono de info para ver la ayuda.</p>
        </RadzenCard>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parametros" Icon="tune" />
    <table class="params-table">
        <tr><th>Parametro</th><th>Tipo</th><th>Default</th><th>Descripcion</th></tr>
        <tr><td><code>Title</code></td><td>string</td><td>null</td><td>Titulo de la seccion</td></tr>
        <tr><td><code>Icon</code></td><td>string</td><td>null</td><td>Icono Radzen o URL imagen</td></tr>
        <tr><td><code>IconStyle</code></td><td>IconStyle</td><td>-</td><td>Estilo del icono</td></tr>
        <tr><td><code>Beta</code></td><td>bool</td><td>false</td><td>Muestra badge "Beta"</td></tr>
        <tr><td><code>HelpContent</code></td><td>RenderFragment</td><td>null</td><td>Contenido de ayuda colapsable</td></tr>
        <tr><td><code>HelpLink</code></td><td>string</td><td>null</td><td>URL documentacion externa</td></tr>
    </table>
</RadzenCard>

