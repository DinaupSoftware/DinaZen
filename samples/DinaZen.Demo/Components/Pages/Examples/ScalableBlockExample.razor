@page "/examples/ScalableBlockExample"

<PageTitle>ScalableBlock</PageTitle>

<h1 class="rz-mb-2">ScalableBlock</h1>
<p class="rz-text-secondary-color rz-mb-4">Block with zoom (+ / -). Scale persisted in localStorage.</p>

<ExampleCard Title="Interactive Demo" Description="Use zoom buttons to scale content" Code="@exampleCode">
    <ChildContent>
        <ScalableBlock Key="demo-scalable-block">
            <RadzenCard Variant="Variant.Outlined">
                <h4>Scalable Content</h4>
                <p>This content can be scaled using the zoom buttons above.</p>
                <p>The scale is saved in localStorage and persists between sessions.</p>
                <div class="badge-row">
                    <RadzenBadge Text="Badge 1" BadgeStyle="BadgeStyle.Primary" />
                    <RadzenBadge Text="Badge 2" BadgeStyle="BadgeStyle.Success" />
                    <RadzenBadge Text="Badge 3" BadgeStyle="BadgeStyle.Warning" />
                </div>
            </RadzenCard>
        </ScalableBlock>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="In a Table" Description="Scale data tables" Code="@tableExampleCode">
    <ChildContent>
        <ScalableBlock Key="demo-scalable-table">
            <table class="params-table">
                <tr><th>Name</th><th>Email</th><th>Status</th></tr>
                <tr><td>Juan Garcia</td><td>juan@example.com</td><td><RadzenBadge Text="Activo" BadgeStyle="BadgeStyle.Success" /></td></tr>
                <tr><td>Maria Lopez</td><td>maria@example.com</td><td><RadzenBadge Text="Pendiente" BadgeStyle="BadgeStyle.Warning" /></td></tr>
                <tr><td>Pedro Martinez</td><td>pedro@example.com</td><td><RadzenBadge Text="Inactivo" BadgeStyle="BadgeStyle.Danger" /></td></tr>
            </table>
        </ScalableBlock>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Description</th></tr>
        <tr><td><code>Key</code></td><td>string</td><td>Unique key for localStorage (required)</td></tr>
        <tr><td><code>ChildContent</code></td><td>RenderFragment</td><td>Content to scale</td></tr>
    </table>

    <CardTitle Title="Features" Icon="info" />
    <ul>
        <li>Scale range: 0.5x to 2x</li>
        <li>Steps of 0.1</li>
        <li>Automatic persistence in localStorage</li>
        <li>localStorage key: <code>scalableBlockScale-{Key}</code></li>
    </ul>
</RadzenCard>

@code {
    private string exampleCode = "<ScalableBlock Key=\"mi-bloque-unico\">\n    <RadzenCard>\n        <h4>Contenido Escalable</h4>\n        <p>Este contenido se puede escalar.</p>\n    </RadzenCard>\n</ScalableBlock>";

    private string tableExampleCode = "<ScalableBlock Key=\"mi-tabla\">\n    <table>\n        <tr><th>Nombre</th><th>Email</th></tr>\n        <tr><td>Juan</td><td>juan@example.com</td></tr>\n    </table>\n</ScalableBlock>";
}
