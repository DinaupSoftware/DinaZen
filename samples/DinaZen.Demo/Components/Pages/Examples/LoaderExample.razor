@page "/examples/LoaderExample"

<PageTitle>Loader</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="Loader" Subtitle="Animated loading indicator with horizontal bars." Icon="hourglass_empty" />
</RadzenCard>

<ExampleCard Title="Light Background" Description="Loader on light background" Code="@(@"@if (isLoading)
{
    <Loader />
}
else
{
    <!-- Contenido cargado -->
}")">
    <ChildContent>
        <div style="height: 100px; border: 1px solid var(--rz-base-300); border-radius: 6px;">
            <Loader />
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Dark Background" Description="Loader on dark background" Code="@(@"<div style=""background: #1a1a2e;"">
    <Loader />
</div>")">
    <ChildContent>
        <div style="height: 100px; background: #1a1a2e; border-radius: 6px;">
            <Loader />
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <p>None. The loader centers automatically in its parent container.</p>
</RadzenCard>
