@page "/examples/StepperUExample"

<PageTitle>StepperU</PageTitle>

<h1 class="rz-mb-2">StepperU + StepperStepU</h1>
<p class="rz-text-secondary-color rz-mb-4">Vertical stepper for step-by-step processes with connecting line.</p>

<ExampleCard Title="Registration Process" Description="Basic stepper with numbered steps" Code="@(@"<StepperU>
    <StepperStepU Index=""1"">
        <strong>Crear cuenta</strong>
        <p>Registra tus datos basicos.</p>
    </StepperStepU>
    <StepperStepU Index=""2"">
        <strong>Verificar email</strong>
        <p>Confirma tu correo.</p>
    </StepperStepU>
    <StepperStepU Index=""3"">
        <strong>Configurar perfil</strong>
        <p>Personaliza tu cuenta.</p>
    </StepperStepU>
    <StepperStepU Index=""4"">
        <strong>Listo!</strong>
        <p>Ya puedes usar la plataforma.</p>
    </StepperStepU>
</StepperU>")">
    <ChildContent>
        <StepperU>
            <StepperStepU Index="1">
                <strong>Crear cuenta</strong>
                <p style="margin:0; color: var(--rz-text-secondary-color);">Registra tus datos basicos.</p>
            </StepperStepU>
            <StepperStepU Index="2">
                <strong>Verificar email</strong>
                <p style="margin:0; color: var(--rz-text-secondary-color);">Confirma tu correo.</p>
            </StepperStepU>
            <StepperStepU Index="3">
                <strong>Configurar perfil</strong>
                <p style="margin:0; color: var(--rz-text-secondary-color);">Personaliza tu cuenta.</p>
            </StepperStepU>
            <StepperStepU Index="4">
                <strong>Listo!</strong>
                <p style="margin:0; color: var(--rz-text-secondary-color);">Ya puedes usar la plataforma.</p>
            </StepperStepU>
        </StepperU>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Order Tracking" Description="With icons and timestamps" Code="@(@"<StepperU>
    <StepperStepU Index=""1"">
        <RadzenStack Orientation=""Orientation.Horizontal"" AlignItems=""AlignItems.Center"" Gap=""0.5rem"">
            <RadzenIcon Icon=""shopping_cart"" />
            <span><strong>Pedido recibido</strong> - 10:30 AM</span>
        </RadzenStack>
    </StepperStepU>
    <StepperStepU Index=""2"">
        <RadzenStack Orientation=""Orientation.Horizontal"" AlignItems=""AlignItems.Center"" Gap=""0.5rem"">
            <RadzenIcon Icon=""inventory"" />
            <span><strong>En preparacion</strong> - 11:00 AM</span>
        </RadzenStack>
    </StepperStepU>
    <StepperStepU Index=""3"">
        <RadzenStack Orientation=""Orientation.Horizontal"" AlignItems=""AlignItems.Center"" Gap=""0.5rem"">
            <RadzenIcon Icon=""local_shipping"" />
            <span><strong>En camino</strong> - 14:00 PM</span>
        </RadzenStack>
    </StepperStepU>
    <StepperStepU Index=""4"">
        <RadzenStack Orientation=""Orientation.Horizontal"" AlignItems=""AlignItems.Center"" Gap=""0.5rem"">
            <RadzenIcon Icon=""check_circle"" Style=""color: var(--rz-success);"" />
            <span><strong>Entregado</strong> - 16:30 PM</span>
        </RadzenStack>
    </StepperStepU>
</StepperU>")">
    <ChildContent>
        <StepperU>
            <StepperStepU Index="1">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                    <RadzenIcon Icon="shopping_cart" />
                    <span><strong>Pedido recibido</strong> - 10:30 AM</span>
                </RadzenStack>
            </StepperStepU>
            <StepperStepU Index="2">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                    <RadzenIcon Icon="inventory" />
                    <span><strong>En preparacion</strong> - 11:00 AM</span>
                </RadzenStack>
            </StepperStepU>
            <StepperStepU Index="3">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                    <RadzenIcon Icon="local_shipping" />
                    <span><strong>En camino</strong> - 14:00 PM</span>
                </RadzenStack>
            </StepperStepU>
            <StepperStepU Index="4">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                    <RadzenIcon Icon="check_circle" Style="color: var(--rz-success);" />
                    <span><strong>Entregado</strong> - 16:30 PM</span>
                </RadzenStack>
            </StepperStepU>
        </StepperU>
    </ChildContent>
</ExampleCard>

