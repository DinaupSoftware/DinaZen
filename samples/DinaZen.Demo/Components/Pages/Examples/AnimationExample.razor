@page "/examples/AnimationExample"

<PageTitle>Animation</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="Animation" Subtitle="Reproductor de animaciones dotLottie (.lottie)." Icon="play_circle" />
</RadzenCard>

<ExampleCard Title="dotLottie" Description="Formato comprimido via dotlottie-player" Code="@(@"<Animation Src=""https://dinaupcdn.com/scan_document.lottie"" />")">
    <ChildContent>
        <Animation Src="https://dinaupcdn.com/scan_document.lottie" Width="150" Height="150" />
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Con tamano personalizado" Description="Especifica dimensiones en pixeles" Code="@(@"<Animation Src=""https://dinaupcdn.com/scan_document.lottie"" Width=""200"" Height=""200"" />")">
    <ChildContent>
        <Animation Src="https://dinaupcdn.com/scan_document.lottie" Width="200" Height="200" />
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parametros" Icon="tune" />
    <table class="params-table">
        <tr><th>Parametro</th><th>Tipo</th><th>Default</th><th>Descripcion</th></tr>
        <tr><td><code>Src</code></td><td>string</td><td>""</td><td>URL del archivo .lottie</td></tr>
        <tr><td><code>Width</code></td><td>int?</td><td>null</td><td>Ancho en pixeles</td></tr>
        <tr><td><code>Height</code></td><td>int?</td><td>null</td><td>Alto en pixeles</td></tr>
        <tr><td><code>Loop</code></td><td>bool</td><td>true</td><td>Repetir animacion</td></tr>
        <tr><td><code>Autoplay</code></td><td>bool</td><td>true</td><td>Reproducir automaticamente</td></tr>
    </table>
</RadzenCard>
