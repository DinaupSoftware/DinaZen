@page "/examples/SpanGramsExample"

<PageTitle>SpanGrams</PageTitle>

<h1 class="rz-mb-2">SpanGrams</h1>
<p class="rz-text-secondary-color rz-mb-4">Shows weight in grams or Kg depending on quantity (>1000g = Kg).</p>

<ExampleCard Title="Basic" Description="Automatic conversion from grams to Kg" Code="@(@"<SpanGrams Value=""250m"" />    @* 250 gr *@
<SpanGrams Value=""500m"" />    @* 500 gr *@
<SpanGrams Value=""1000m"" />   @* 1000 gr (limit) *@
<SpanGrams Value=""1500m"" />   @* 1.5 Kg *@
<SpanGrams Value=""5000m"" />   @* 5 Kg *@")">
    <ChildContent>
        <div class="examples-grid">
            <div>
                <span class="example-label">250g (grams):</span>
                <SpanGrams Value="250m" />
            </div>
            <div>
                <span class="example-label">500g (grams):</span>
                <SpanGrams Value="500m" />
            </div>
            <div>
                <span class="example-label">1000g (limit):</span>
                <SpanGrams Value="1000m" />
            </div>
            <div>
                <span class="example-label">1500g (Kg):</span>
                <SpanGrams Value="1500m" />
            </div>
            <div>
                <span class="example-label">5000g (Kg):</span>
                <SpanGrams Value="5000m" />
            </div>
        </div>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="AutoColor" Description="Blue for Kg, Red for grams" Code="@(@"<SpanGrams Value=""500m"" AutoColor=""true"" />    @* Red (grams) *@
<SpanGrams Value=""2000m"" AutoColor=""true"" />   @* Blue (Kg) *@")">
    <ChildContent>
        <div class="examples-grid">
            <div>
                <span class="example-label">500g (red):</span>
                <SpanGrams Value="500m" AutoColor="true" />
            </div>
            <div>
                <span class="example-label">2000g (blue):</span>
                <SpanGrams Value="2000m" AutoColor="true" />
            </div>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>Value</code></td><td>decimal?</td><td>null</td><td>Weight in grams</td></tr>
        <tr><td><code>AutoColor</code></td><td>bool</td><td>false</td><td>Blue if greater than 1000g, Red if less</td></tr>
        <tr><td><code>Class</code></td><td>string</td><td>""</td><td>Additional CSS classes</td></tr>
        <tr><td><code>FontSize</code></td><td>string</td><td>"16px"</td><td>Font size</td></tr>
    </table>

    <CardTitle Title="Behavior" Icon="info" />
    <ul>
        <li>&lt;= 1000g: Shows in grams (e.g., "500 gr")</li>
        <li>&gt; 1000g: Converts to Kg (e.g., "1.5 Kg")</li>
    </ul>
</RadzenCard>
