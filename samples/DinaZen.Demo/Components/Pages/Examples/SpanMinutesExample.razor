@page "/examples/SpanMinutesExample"

<PageTitle>SpanMinutes</PageTitle>

<h1 class="rz-mb-2">SpanMinutes</h1>
<p class="rz-text-secondary-color rz-mb-4">Converts minutes to readable format 'Xh Ym'.</p>

<ExampleCard Title="Examples" Description="Automatic conversion to hours and minutes" Code="@(@"<SpanMinutes Value=""45m"" />    @* 45m *@
<SpanMinutes Value=""90m"" />    @* 1h 30m *@
<SpanMinutes Value=""180m"" />   @* 3h *@
<SpanMinutes Value=""0m"" />     @* 0m *@
<SpanMinutes Value=""-30m"" />   @* -30m *@
<SpanMinutes Value=""500m"" />   @* 8h 20m *@")">
    <ChildContent>
        <div class="examples-grid">
            <div>
                <span class="example-label">Minutes only (45):</span>
                <SpanMinutes Value="45m" />
            </div>
            <div>
                <span class="example-label">With hours (90):</span>
                <SpanMinutes Value="90m" />
            </div>
            <div>
                <span class="example-label">Exact hours (180):</span>
                <SpanMinutes Value="180m" />
            </div>
            <div>
                <span class="example-label">Zero:</span>
                <SpanMinutes Value="0m" />
            </div>
            <div>
                <span class="example-label">Negative (-30):</span>
                <SpanMinutes Value="-30m" />
            </div>
            <div>
                <span class="example-label">Large (500):</span>
                <SpanMinutes Value="500m" />
            </div>
        </div>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>Value</code></td><td>decimal?</td><td>0</td><td>Total minutes</td></tr>
        <tr><td><code>FontSize</code></td><td>string</td><td>"16px"</td><td>Font size</td></tr>
    </table>
</RadzenCard>

<style>
    .example-label { min-width: 160px; }
</style>
