@page "/examples/HealthSectionExample"

<PageTitle>HealthSection</PageTitle>

<RadzenCard class="rz-mb-4">
    <CardTitle Title="HealthSection" Subtitle="Renderiza contenido solo si un Health Check esta saludable." Icon="monitor_heart" />
</RadzenCard>

<ExampleCard Title="Uso basico" Description="Contenido condicional segun estado del health check" Code="@(@"<HealthSection CheckName=""database"">
    <!-- Solo visible si database health check es Healthy -->
    <MyDatabaseComponent />
</HealthSection>

<HealthSection CheckName=""external-api"">
    <ExternalApiWidget />
</HealthSection>")">
    <ChildContent>
        <RadzenRow Gap="1rem">
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenCard Variant="Variant.Outlined">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                        <RadzenIcon Icon="check_circle" Style="color: var(--rz-success);" />
                        <strong>Healthy</strong>
                    </RadzenStack>
                    <p class="rz-mt-2">Se renderiza el ChildContent</p>
                </RadzenCard>
            </RadzenColumn>
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenCard Variant="Variant.Outlined">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                        <RadzenIcon Icon="error" Style="color: var(--rz-danger);" />
                        <strong>No Healthy</strong>
                    </RadzenStack>
                    <p class="rz-mt-2" style="color: gray; font-style: italic;">(Servicio no disponible en este momento.)</p>
                </RadzenCard>
            </RadzenColumn>
        </RadzenRow>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Configuracion en Program.cs" Description="Registra los health checks en el startup" Code="@(@"builder.Services.AddHealthChecks()
    .AddCheck(""database"", () => HealthCheckResult.Healthy())
    .AddCheck(""external-api"", () => HealthCheckResult.Degraded())
    .AddCheck(""cache"", () => HealthCheckResult.Unhealthy());")">
    <ChildContent>
        <p class="rz-text-secondary-color">Los health checks se configuran en Program.cs usando AddHealthChecks()</p>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parametros" Icon="tune" />
    <table class="params-table">
        <tr><th>Parametro</th><th>Tipo</th><th>Default</th><th>Descripcion</th></tr>
        <tr><td><code>CheckName</code></td><td>string</td><td>""</td><td>Nombre del Health Check</td></tr>
        <tr><td><code>ChildContent</code></td><td>RenderFragment</td><td>null</td><td>Contenido a renderizar</td></tr>
    </table>
</RadzenCard>
