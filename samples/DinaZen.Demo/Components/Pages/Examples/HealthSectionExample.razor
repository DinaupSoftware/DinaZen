@page "/examples/HealthSectionExample"

<PageTitle>HealthSection</PageTitle>

<h1 class="rz-mb-2">HealthSection</h1>
<p class="rz-text-secondary-color rz-mb-4">Renders content only if a Health Check is healthy.</p>

<ExampleCard Title="Basic Usage" Description="Conditional content based on health check status" Code="@(@"<HealthSection CheckName=""database"">
    <!-- Solo visible si database health check es Healthy -->
    <MyDatabaseComponent />
</HealthSection>

<HealthSection CheckName=""external-api"">
    <ExternalApiWidget />
</HealthSection>")">
    <ChildContent>
        <RadzenRow Gap="1rem">
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenCard Variant="Variant.Outlined">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                        <RadzenIcon Icon="check_circle" Style="color: var(--rz-success);" />
                        <strong>Healthy</strong>
                    </RadzenStack>
                    <p class="rz-mt-2">ChildContent is rendered</p>
                </RadzenCard>
            </RadzenColumn>
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenCard Variant="Variant.Outlined">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                        <RadzenIcon Icon="error" Style="color: var(--rz-danger);" />
                        <strong>Not Healthy</strong>
                    </RadzenStack>
                    <p class="rz-mt-2" style="color: gray; font-style: italic;">(Service not available at this time.)</p>
                </RadzenCard>
            </RadzenColumn>
        </RadzenRow>
    </ChildContent>
</ExampleCard>

<ExampleCard Title="Configuration in Program.cs" Description="Register health checks on startup" Code="@(@"builder.Services.AddHealthChecks()
    .AddCheck(""database"", () => HealthCheckResult.Healthy())
    .AddCheck(""external-api"", () => HealthCheckResult.Degraded())
    .AddCheck(""cache"", () => HealthCheckResult.Unhealthy());")">
    <ChildContent>
        <p class="rz-text-secondary-color">Health checks are configured in Program.cs using AddHealthChecks()</p>
    </ChildContent>
</ExampleCard>

<RadzenCard class="rz-mt-4">
    <CardTitle Title="Parameters" Icon="tune" />
    <table class="params-table">
        <tr><th>Parameter</th><th>Type</th><th>Default</th><th>Description</th></tr>
        <tr><td><code>CheckName</code></td><td>string</td><td>""</td><td>Health Check name</td></tr>
        <tr><td><code>ChildContent</code></td><td>RenderFragment</td><td>null</td><td>Content to render</td></tr>
    </table>
</RadzenCard>
