@page "/"
@using Microsoft.AspNetCore.Components.Web
@using Radzen.Blazor
@using DinaZen.Components
@namespace DinaZenDinaupCom.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var dinaZenVersion = typeof(CardTitle).Assembly.GetName().Version;
    var radzenVersion = typeof(Radzen.Colors).Assembly.GetName().Version;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />

    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="DinaZen.Demo.styles.css" />

    <!-- DinaZen Resources -->
    <link rel="stylesheet" href="@($"/_content/DinaZen/dinazen.css?v={dinaZenVersion}")" />
    <link rel="stylesheet" href="@($"/_content/DinaZen/highlight.min.css?v={dinaZenVersion}")" />

    <link rel="icon" type="image/png" href="favicon.png" />

    <component type="typeof(RadzenTheme)" render-mode="ServerPrerendered" param-Theme="@("material")" />
</head>
<body>
    <component type="typeof(DinaZenDinaupCom.Components.App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="@($"/_content/Radzen.Blazor/Radzen.Blazor.js?v={radzenVersion}")"></script>

    <!-- DinaZen Resources -->
    <script src="@($"/_content/DinaZen/highlight.min.js?v={dinaZenVersion}")"></script>
    <script type="module" src="@($"/_content/DinaZen/dotlottie-player.mjs?v={dinaZenVersion}")"></script>
    <script src="@($"/_content/DinaZen/dinazen.js?v={dinaZenVersion}")"></script>
</body>
</html>
