<RadzenButton Click=OnClick Text=@ButtonData.Label @key=ButtonData.Token style="@ButtonStyle">
</RadzenButton>

@code {


	[Parameter] public EventCallback<string> OnMostrarDialogRequiereGuardar { get; set; }

	[Parameter]
	public Dinaup.VirtualFormDTO.ControlButton ButtonData { get; set; }

	[Parameter]
	public EventCallback<string> OnButtonClick { get; set; }

	private string ButtonStyle { get; set; }

	protected override void OnParametersSet()
	{
		ButtonStyle = $"position: absolute;     padding: 1px;font-size: 11px;   letter-spacing: 0.5px;" +
					  $"left: {ButtonData.X}px; " +
					  $"top: {ButtonData.Y}px; " +
					  $"width: {ButtonData.Width}px; " +
					  $"height: {ButtonData.Height}px;";
	}



	void OnClick()
	{

		if (ButtonData.ParentForm.ParentVirtualForm.HasChanged() && ButtonData.NeedSaveToClick)
		{
			OnMostrarDialogRequiereGuardar.InvokeAsync("Se requiere guardar para ejecutar esta acción");
		}
		else
		{
			OnButtonClick.InvokeAsync(ButtonData.Id);
		}



	}


	public void Dispose()
	{
		ButtonData = null;
	}




}