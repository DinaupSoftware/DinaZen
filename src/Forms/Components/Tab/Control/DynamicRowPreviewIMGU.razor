else if (Data.PreviewIMG != "")
{
	<div @key=@Data.PreviewIMG class=@Class style="width: 40px; height: 40px;max-width: 40px; max-height: 40px;min-width: 40px; min-height: 40px; background: url('@(Data.PreviewIMG)'), url('https://cdn.dinaup.com/up/202505/bullet.svg') ;background-size: cover; background-position: center; @Style; border-radius: @(Data.PreviewIMGRound ? "100%" : "0");">
	</div>
}
else if (Data.PreviewIMGRound)
{

	 
	string initial = Data.Title.Substring(0, 1).ToUpper();
	string bgColor = colorMap.GetM(initial[0], "#607d8b");
	<div  class=@Class style="width: 40px; height: 40px;max-width: 40px; max-height: 40px;min-width: 40px; min-height: 40px; background-color: @bgColor; color: white; display: flex; justify-content: center; align-items: center; @Style; border-radius: 50%;">
		@initial
	</div>
}



